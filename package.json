{
  "name": "CLIP",
  "scripts": {
    "build": "cd clip-client && pnpm build && cd ../clip-server && pnpm build",
    "start": "cd clip-server && node build/index.js"
  },
  "bin": "clip-server/build/index.js",
  "pkg": {
    "assets": [
      "clip-client/dist/**/*",
      "clip-server/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ]
  }
}
